<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       tools:context=".second">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

              <ImageView
                  android:id="@+id/vf"
                  android:layout_width="match_parent"
                  android:layout_height="200dp"
                  android:src="@drawable/arun"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dumbell side bends"
                    android:textSize="25dp"
                    android:layout_marginLeft="70sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/absbody"
                        android:layout_marginLeft="100dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="100dp"
                        android:textSize="20sp"
                        android:text="Primary Abdominal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Specification"
                        android:textSize="25dp"
                        android:layout_marginLeft="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="70dp"
                            android:layout_marginTop="15dp"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:layout_marginLeft="20sp"
                            android:text="sets"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 12-10-8-6 "
                            android:textSize="20sp"
                            android:layout_marginTop="20sp"/>


                    </LinearLayout>
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                   <TextView
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="Description"
                            android:textSize="25sp"
                            android:layout_marginTop="20sp"/>

                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="1.Stand up straight while holding a dumbbell on the left hand as you have the right hand holding your waist. Your feet should be placed at shoulder width. This will be your starting position."
                            android:textSize="18sp"
                            android:layout_marginTop="6sp"/>


                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="2.While keeping your back straight and your head up, bend only at the waist to the right as far as possible. Breathe in as you bend to the side. Then hold for a second and come back up to the starting position as you exhale. Tip: Keep the rest of the body stationary."
                            android:textSize="18sp"
                            android:layout_marginTop="6sp"/>


                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="3.Now repeat the movement but bending to the left instead. Hold for a second and come back to the starting position."
                            android:textSize="18sp"
                            android:layout_marginTop="6sp"/>



                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="4.Repeat for the recommended amount of repetitions and then change hands."
                            android:textSize="18sp"
                            android:layout_marginTop="6sp"/>


                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="Caution: Refrain from using this exercise if your obliques tend to grow easily as wide obliques take away from your symmetry."
                            android:textSize="18sp"
                            android:layout_marginTop="6sp"/>



                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="Variations: You can also do this exercise while seating on a bench or with a barbel"
                            android:textSize="18sp"
                            android:layout_marginTop="6sp"/>




                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>



        </ScrollView>
    </LinearLayout>